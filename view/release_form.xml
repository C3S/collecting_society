     Repository: https://github.com/C3S/collecting_society -->
<form string="Release" col="8">
    <label name="title"/>
    <field name="title"/>
    <label name="code"/>
    <field name="code"/>
    <label name="commit_state"/>
    <field name="commit_state"/>
    <group col="20" colspan="2" id="checkboxes">
        <label name="active"/>
        <field name="active" xexpand="0" width="25"/>
    </group>
    <label name="isrc_code"/>
    <field name="isrc_code"/>
    <label name="label_catalog_number"/>
    <field name="label_catalog_number"/>
    <label name="ean_upc_code"/>
    <field name="ean_upc_code"/>

    <notebook colspan="8">
        <page string="General" id="general" col="6">
            <group id="image" colspan="1" col="1" xexpand="0">
                <separator string="Picture" id="picture" xexpand="0"/>
                <field name="picture_data" widget="image"
                    height="200" width="200" readonly="1"
                    img_width="200" img_height="200"
                    yexpand="0" xexpand="0"/>
                <field name="picture_data" xexpand="0"/>
            </group>
            <group id="dates" colspan="2" col="2" xexpand="0">
                <label name="release_date"/>
                <field name="release_date"/>
                <label name="release_cancellation_date"/>
                <field name="release_cancellation_date"/>
                <label name="online_release_date"/>
                <field name="online_release_date"/>
                <label name="online_cancellation_date"/>
                <field name="online_cancellation_date"/>
                <label name="copyright_date"/>
                <field name="copyright_date"/>
                <label name="production_date"/>
                <field name="production_date"/>
            </group>
            <group id="medium" colspan="2" col="2" xexpand="0">
                <label name="number_mediums"/>
                <field name="number_mediums"/>
            </group>
            <newline/>
<!--             <label name="copyright_owner"/>
            <field name="copyright_owner"/>   -->
            <label name="neighbouring_rights_society"/>
            <field name="neighbouring_rights_society"/>
            <newline/>
            <label name="label"/>
            <field name="label"/>
            <label name="producer"/>
            <field name="producer"/>
            <newline/>
            <label name="distribution_territory"/>
            <field name="distribution_territory"/>
            <label name="warning"/>
            <field name="warning"/>
            <newline/>
            <field name="genres" colspan="6" />
        </page>
        <page string="Tracks" id="creations">
            <field name="creations" string="Tracks" />
        </page>
        <page string="Owner" id="owner" col="6">
            <label name="entity_origin"/>
            <field name="entity_origin" colspan="5"/>
            <label name="entity_creator"/>
            <field name="entity_creator" colspan="5"/>
            <label name="claim_state"/>
            <field name="claim_state" colspan="5"/>
        </page>
    </notebook>
</form>
