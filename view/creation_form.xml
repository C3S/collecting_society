<form string="Creation" col="8">
    <label name="title"/>
    <field name="title" xexpand="1"/>
    <label name="code"/>
    <field name="code"/>
    <label name="commit_state"/>
    <field name="commit_state"/>
    <group col="20" colspan="2" id="checkboxes">
        <label name="active"/>
        <field name="active" xexpand="0" width="25"/>
        <!-- Add here some checkboxes ! -->
    </group>
    <label name="artist"/>
    <field name="artist"/>
    <label name="release"/>
    <field name="release"/>
    <label name="license"/>
    <field name="license"/>

    <notebook colspan="8">
        <page string="Contributions" id="contributions">
            <field name="contributions"/>
        </page>
        <page string="Derivatives" id="derivatives">
            <field name="original_relations" string="Originals"/>
            <field name="derivative_relations" string="Derivatives"/>
        </page>
        <page string="Content" id="content" col="6">
            <field name="content"/>
            <field name="identifiers"/>
        </page>
        <page string="Releases" id="releases">
            <field name="releases"/>
            <field name="licenses"/>
        </page>
        <page string="Tariff" id="tariff" col="6">
            <label name="utilisation_sector_live"/>
            <field name="utilisation_sector_live" colspan="5"/>
            <label name="utilisation_sector_reproduction"/>
            <field name="utilisation_sector_reproduction" colspan="5"/>
            <label name="utilisation_sector_playing"/>
            <field name="utilisation_sector_playing" colspan="5"/>
            <label name="utilisation_sector_otherart"/>
            <field name="utilisation_sector_otherart" colspan="5"/>
            <label name="utilisation_sector_radio"/>
            <field name="utilisation_sector_radio" colspan="5"/>
            <label name="utilisation_sector_tv"/>
            <field name="utilisation_sector_tv" colspan="5"/>
            <label name="utilisation_sector_movie"/>
            <field name="utilisation_sector_movie" colspan="5"/>
            <label name="utilisation_sector_online"/>
            <field name="utilisation_sector_online" colspan="5"/>
            <label name="utilisation_sector_advertising"/>
            <field name="utilisation_sector_advertising" colspan="5"/>
        </page>
        <page string="Tags" id="tags">
            <field name="styles"/>
            <field name="genres"/>
        </page>
        <page string="Owner" id="owner" col="6">
            <label name="entity_origin"/>
            <field name="entity_origin" colspan="5"/>
            <label name="entity_creator"/>
            <field name="entity_creator" colspan="5"/>
            <label name="claim_state"/>
            <field name="claim_state" colspan="5"/>
        </page>
    </notebook>
</form>
